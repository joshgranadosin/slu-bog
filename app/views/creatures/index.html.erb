<div class="container-fluid">
	<div class="row">
		<div class="col-xs-10 col-sm-8 col-md-6 col-lg-6 col-xs-offset-1 col-sm-offset-2 col-md-offset-3">
			<% @creatures.each do |creature| %>
				<a href="/creatures/<%= creature.id %>">
					<h2><%= creature.name %> <small> (<%= creature.description %>)</small></h2>
				</a>
			<% end %>

			<a href="/creatures/new">
				<button class="btn btn-primary">Add New Creature</button>
			</a>
		</div>
	</div>
</div>

