<div class="container-fluid">
	<div class="row">
		<div class="col-xs-10 col-sm-8 col-md-6 col-lg-6 col-xs-offset-1 col-sm-offset-2 col-md-offset-3">
			<h2><%= @creature.name %><br>
			<small> (<%= @creature.description %>)</small></h2>
			<a href="/creatures/<%= @creature.id %>/edit">
				<button class="btn btn-primary">Edit</button>
			</a>

			<%= form_tag(creature_path(@creature.id), method: "delete") %>
			<button type="submit" class="btn btn-danger">Delete</button>
		</div>
	</div>
</div>